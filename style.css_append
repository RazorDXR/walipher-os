/* Notification Center */
.notification-btn {
    position: relative;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    margin-left: 10px;
    transition: all 0.3s;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.notification-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
}

.notification-badge {
    position: absolute;
    top: -2px;
    right: -2px;
    background: var(--red);
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #020617;
    box-shadow: 0 0 10px var(--red);
}

.notif-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(5px);
    z-index: 900;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
}

.notif-overlay.open {
    opacity: 1;
    pointer-events: all;
}

.notification-panel {
    position: fixed;
    top: 0;
    right: -350px;
    width: 320px;
    height: 100vh;
    background: var(--glass-bg-high);
    border-left: 1px solid var(--glass-border);
    backdrop-filter: blur(20px);
    z-index: 950;
    transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    box-shadow: -10px 0 30px rgba(0, 0, 0, 0.5);
    padding: 20px;
}

.notification-panel.open {
    right: 0;
}

.notif-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--glass-border);
}

.notif-header h3 {
    margin: 0;
    font-size: 1.1rem;
    color: white;
}

.clear-notif {
    font-size: 0.8rem;
    color: var(--red);
    cursor: pointer;
    font-weight: 500;
    transition: opacity 0.2s;
}

.clear-notif:hover {
    opacity: 0.8;
}

.notif-list {
    flex: 1;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.empty-notif {
    text-align: center;
    color: #64748b;
    margin-top: 50px;
    font-size: 0.9rem;
}

.notif-item {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
    padding: 12px;
    display: flex;
    gap: 12px;
    cursor: pointer;
    transition: all 0.2s;
    border: 1px solid transparent;
}

.notif-item:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateX(-2px);
}

.notif-item.unread {
    background: linear-gradient(90deg, rgba(56, 189, 248, 0.1), rgba(255, 255, 255, 0.03));
    border-color: rgba(56, 189, 248, 0.2);
}

.notif-icon {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.notif-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.notif-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: #e2e8f0;
}

.notif-msg {
    font-size: 0.8rem;
    color: #94a3b8;
    line-height: 1.3;
}

.notif-time {
    font-size: 0.7rem;
    color: #64748b;
    align-self: flex-end;
}
